@{
    Layout = null;
}
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div>
        <form asp-controller="Home" asp-action="LogOff" method="get">
            <h1>Leave Management</h1>
            <h1>You Have Successfully Login with OAuth Server - </h1>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "LogOff")

            <div>
                <div>
                    <button type="submit">Log Off</button>
                </div>
            </div>
        </form>
    </div>
}
<section>
    <h3>User Level Environment variable</h3>
    <ul>
        @foreach (dynamic env in Environment.GetEnvironmentVariables(EnvironmentVariableTarget.User) as IDictionary)
        {
            
            <li><b>@env.Key</b> - @env.Value</li>
        }
    </ul>
</section>
<section>
    <h3>Process Level Environment variable</h3>
    <ul>
        @foreach (dynamic env in Environment.GetEnvironmentVariables(EnvironmentVariableTarget.Process))
        {
            <li><b>@env.Key</b> - @env.Value</li>
        }
    </ul>
</section>
<section>
    <h3>Machine Level Environment variable</h3>
    <ul>
        @foreach (dynamic env in Environment.GetEnvironmentVariables(EnvironmentVariableTarget.Machine))
        {
            <li><b>@env.Key</b> - @env.Value</li>
        }
    </ul>
</section>
